<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edittext_categorynew_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/category_detail_hint"
        android:inputType="text"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogroup_categorynew_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:checkedButton="@+id/radiobutton_categorynew_blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_categorynew_description">

        <RadioButton
            android:id="@+id/radiobutton_categorynew_blue"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_category"
            android:buttonTint="@color/blue" />

        <RadioButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_category"
            android:buttonTint="@color/green" />

        <RadioButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_category"
            android:buttonTint="@color/purple" />

        <RadioButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_category"
            android:buttonTint="@color/pink" />

        <RadioButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_category"
            android:buttonTint="@color/red" />

        <RadioButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_category"
            android:buttonTint="@color/orange" />

        <RadioButton
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:button="@drawable/selector_radio_category"
            android:buttonTint="@color/yellow" />

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_categorynew_add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:elevation="48dp"
        android:text="@string/category_detail_save"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radiogroup_categorynew_label" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray_shadow_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_categorynew_add" />

</androidx.constraintlayout.widget.ConstraintLayout>
